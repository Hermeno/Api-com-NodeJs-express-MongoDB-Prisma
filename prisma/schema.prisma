datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  username String
  name    String
  password    String
}
model Credito {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id      String
  moeda        String
  valor         String
  referencia   String
  missao_id   String
  data_criacao DateTime @default(now())
}    

model Cambio {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  moeda_origem       String
  moeda_destino       String
  cotacao             String
  total_a_cambiar String
  total_cambiado String
  numero_recibo         String
  missao_id    String
  data_criacao DateTime @default(now())
  user_id       String
  // username      String
  // data_cambio  DateTime @default(now())
}

model Missao {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  missao       String
  data_inicio_prevista DateTime
  data_final_prevista DateTime
  pais           String
  estado         String
  cidade         String
  user_id       String
  username      String
  status        String
}




